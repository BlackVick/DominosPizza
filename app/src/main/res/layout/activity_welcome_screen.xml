<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dominos_background"
    tools:context="com.sri.dominospizza.WelcomeScreen">


    <ImageView
        android:id="@+id/welcomeImg"
        android:layout_width="200dp"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:src="@drawable/dominos_logo"
        android:layout_height="200dp"
        android:layout_marginTop="148dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:fontFamily="casual"
        android:text="'You Got 30 Minutes'"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="POWERED BY S.R.I"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2"
        android:fontFamily="casual"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold" />

</RelativeLayout>
